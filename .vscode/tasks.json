{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: build",
      "type": "shell",
      "command": "docker build -t ${workspaceFolderBasename}:dev .",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "docker: run",
      "type": "shell",
      "command": "docker rm -f ${workspaceFolderBasename}-web 2>/dev/null || true; docker run -d --rm -p 8080:80 --name ${workspaceFolderBasename}-web ${workspaceFolderBasename}:dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "docker: stop",
      "type": "shell",
      "command": "docker rm -f ${workspaceFolderBasename}-web 2>/dev/null || true",
      "problemMatcher": []
    },
    {
      "label": "docker: up",
      "dependsOrder": "sequence",
      "dependsOn": [
        "docker: build",
        "docker: run"
      ],
      "problemMatcher": []
    }
  ]
}
